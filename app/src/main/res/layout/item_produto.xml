<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/tvNomeProdutoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Categoria -->
        <TextView
            android:id="@+id/tvCategoriaProdutoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Categoria"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- Linha com Quantidade e Preço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Quantidade -->
            <TextView
                android:id="@+id/tvQuantidadeProdutoItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qtd: 100 un"
                android:textColor="#424242"
                android:textSize="14sp" />

            <!-- Preço -->
            <TextView
                android:id="@+id/tvPrecoProdutoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 45,90"
                android:textColor="#8B6F47"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatusProdutoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#4CAF50"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="Ativo"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

