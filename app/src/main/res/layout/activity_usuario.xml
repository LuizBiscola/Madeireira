<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header com botão voltar e título -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnVoltarUsuario"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:background="#8B6F47"

            android:src="@drawable/leftarrow"
            app:tint="#FFFFFF"

            android:padding="12dp"
            android:scaleType="fitCenter"

            android:elevation="2dp"
            android:contentDescription="Voltar" />

        <TextView
            android:id="@+id/tvTituloAbaUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Novo Usuário"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Espaço para balancear o layout -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- ScrollView com o conteúdo do formulário -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações Pessoais"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Nome Completo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNomeUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: João Silva"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEmailUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: joao@email.com"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Telefone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etTelefoneUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: (11) 98765-4321"
                android:inputType="phone"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Endereço -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEnderecoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Rua das Flores, 123"
                android:inputType="textPostalAddress"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- CPF/CNPJ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF/CNPJ (opcional)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etCpfCnpjUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: 123.456.789-00"
                android:inputType="number"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Título Acesso -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados de Acesso"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Senha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etSenhaUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite a senha"
                android:inputType="textPassword"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Confirmar Senha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar Senha"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etConfirmarSenhaUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite a senha novamente"
                android:inputType="textPassword"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btnSalvarUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Salvar Usuário"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#8B6F47"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Botão Excluir -->
            <Button
                android:id="@+id/btnExcluirUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Excluir Usuário"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>