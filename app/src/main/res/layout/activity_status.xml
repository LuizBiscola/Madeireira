<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header com botão voltar e título -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnVoltarStatus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#8B6F47"
            android:src="@drawable/leftarrow"
            app:tint="#FFFFFF"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:elevation="2dp"
            android:contentDescription="Voltar" />

        <TextView
            android:id="@+id/tvTituloAbaStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Novo Status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Espaço para balancear o layout -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- ScrollView com o conteúdo do formulário -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações do Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Descrição do Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDescricaoStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Disponível"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:background="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btnSalvarStatus"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Salvar Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#8B6F47"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Botão Excluir -->
            <Button
                android:id="@+id/btnExcluirStatus"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Excluir Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

